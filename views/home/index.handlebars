{{#if posts}}
<!-- Blog Entries Column -->
<div class="col-md-8">
  <h1 class="my-4">
    {{viewName}}
  </h1>
  {{#each posts}}
  <!-- Blog Post -->
  <div class="card mb-4">
    <img class="card-img-top" src="/uploads/{{file}}" alt="Card image cap" style="height: 300px;object-fit:cover" />
    <div class="card-body">
      <h2 class="card-title">
        {{title}}
      </h2>
      <script>
        $(function () {
          document.querySelectorAll('[data-content]').forEach((post) => {
            post.innerHTML = post.getAttribute('data-content');
          })
        })
      </script>
      <p class="card-text" data-content="{{body}}">
      </p>
      <a href="/post/{{postId}}" class="btn btn-primary">
        Read More &rarr;
      </a>
    </div>
    <div class="card-footer text-muted">
      Posted on {{genTime date "MMMM Do YYYY"}} by
      <a href="#">
        {{user.firstName}} {{user.lastName}}
      </a>
    </div>
  </div>
  {{/each}}
  <!-- Pagination -->
  <ul class="pagination justify-content-center mb-4">
    {{#if (checkLastPage pages.prev pages.maxlength pages.limit) }}
    <li class="page-item ">
      {{else}}
    <li class="page-item disabled">
      {{/if}}
      <a class="page-link" href="?page={{pages.prev}}">
        &larr; Older
      </a>
    </li>
    {{#if (checkPage pages.next) }}
    <li class="page-item ">
      {{else}}
    <li class="page-item disabled">
      {{/if}}
      {{!-- <li class="page-item disabled"> --}}
      <a class="page-link" href="?page={{pages.next}}">
        Newer &rarr;
      </a>
    </li>
  </ul>
</div>

{{> home/sidebar}}
{{else}}
{{> home/404page}}
{{/if}}